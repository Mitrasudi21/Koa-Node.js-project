
<div class="ui floating warning message" ng-if="students.length == 0">
  <div class="header">
    Currently there are no student
  </div>
  <a ui-sref="create">Click here</a> to create a student.
</div>
<div class="ui" ng-if="students.length > 0" style="margin-top: 20px;">
  <div class="content">
    <div class="ui">
      <form class="ui form">
        <div class="fields">
          <div class="twelve wide field">
            <div class="ui icon input">
              <input type="text" name="name" placeholder="Search students" ng-model="studentSearch">
              <i class="search icon"></i>
            </div>
          </div>
          <div class="four wide field">
            <!--<div class="ui labeled green icon button" ng-click="exportDataInExcel();">
              <i class="file excel icon"></i> Export
            </div>-->
          </div>
        </div>
      </form>
      <div style="height: 10px;"></div>
      <div class="scrable_table">

        <table class="ui unstackable table data_table">
          <thead>
          <tr>
            <th>Name</th>
            <th>Active</th>
            <th>Action</th>
            <th>Delete</th>
            <th>Gender</th>
            <th>Pet</th>
            <th>Pet-type</th>
            <th style="width: 60px;"></th>
          </tr>
          </thead>
          <tbody>
          <tr dir-paginate="student in students | filter:studentSearch | itemsPerPage:20">
            <td>\{{student.name}}</td>
            <td>
              <div class="user-list ui toggle checkbox read-only" ng-class="student.isActive?'checked ' + student._id:student._id" ng-click="setEnableddisabled(student);">
                <input id="\{{student._id}}" type="checkbox" ng-checked="student.isActive" onclick="return false;">
                <label></label>
              </div>
            </td>
            <td>
              <i title="Student Details" class="large folder open link icon" ng-click="navUpdate(student);"></i>
            </td>
            <td>
              <input type="button" value="Delete" ng-click ="deletestudent(student)">
            </td>
            <td>\{{student.gender}}</td>
            <td>\{{student.petName}}</td>
            <td>\{{student.pettype}}</td>
            <td style="width: 30px;">
              <i class="notched circle loading icon" style="visibility: hidden;"></i>
            </td>
          </tr>
          </tbody>
        </table>
        <dir-pagination-controls max-size="7" direction-links="true" boundary-links="true">
        </dir-pagination-controls>
      </div>
    </div>
  </div>
</div>
    